<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <com.sd.lib.passwordview.FPasswordView
            android:id="@+id/view_password_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            app:pvItemBackground="@drawable/bg_item_white"
            app:pvItemMargin="10dp"
            app:pvPasswordPlaceholder="" />

    </FrameLayout>

    <com.sd.lib.passwordview.FPasswordView
        android:id="@+id/view_password_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        app:pvItemCount="5"
        app:pvPasswordPlaceholder="*" />

    <com.sd.lib.passwordview.FPasswordView
        android:id="@+id/view_password_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp" />

</LinearLayout>